<% @body_id = 'cart' %>

<div data-hook="cart_container">

  <h1>Votre Panier</h1>

  <% if @order.line_items.empty? %>

    <div data-hook="empty_cart">
      <p>Votre panier est vide</p>
      <p><%= link_to 'Faire mon shopping !', products_path, class: 'button_cart', id: "empty_cart" %></p>
    </div>

  <% else %>

    <div data-hook="outside_cart_form">

      <p>Pas terminé ? <%= link_to 'Continuer mon shopping !', products_path, class: 'continue_cart' %></p>

      <%= form_for @order, url: update_cart_path, html: {id: 'update-cart'} do |order_form| %>
        <div id="upper_buttons" class="links columns sixteen alpha omega" data-hook="cart_buttons">
        <%= button_tag 'rafraîchir', class: "button_cart", id: "update-button" %>
      <% end %>
      <%= form_tag empty_cart_path, id: 'clear_cart_form', method: :put do %>
        <%= submit_tag 'vider le panier', class: 'button_cart', id: 'clear_cart' %>
        </div>
      <% end %>

      <%= form_for @order, url: update_cart_path, html: {id: 'update-cart'} do |order_form| %>
        <div id="recap" class="links columns sixteen alpha omega" data-hook="cart_buttons">
            <p style="font-size: 16px;"><b>Récapitulatif</b></p>
            <p>Sous-total : <b><%= @order.display_total %></b></p>
            <p>Un code promo ?</p>
            <%= render template: 'spree/coupon_codes/new' %>
            <%= button_tag 'Passer au paiement', class: 'button checkout primary', id: 'checkout-link', name: 'checkout'%>
        </div>

        <div data-hook="inside_cart_form">

          <div data-hook="cart_items">
            <%= render 'spree/orders/form', order_form: order_form %>
          </div>

        </div>
      <% end %>
    </div>

    <!--<div id="empty-cart" data-hook>
      <%= form_tag empty_cart_path, method: :put do %>
        <p id="clear_cart_link" data-hook>
        <%= submit_tag t('spree.empty_cart'), class: 'button gray' %>
        <%= t('spree.or') %>
        <%= link_to t('spree.continue_shopping'), products_path, class: 'continue button gray' %>
        </p>
      <% end %>

      <%= render template: 'spree/coupon_codes/new' %>
    </div>-->

  <% end %>
</div>
