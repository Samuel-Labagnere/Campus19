<div class="columns alpha six" data-hook="billing_fieldset_wrapper">
  <fieldset id="billing" data-hook>
    <%= form.fields_for :bill_address do |bill_form| %>
      <legend align="center"><%= t('spree.billing_address') %></legend>
      <%= render partial: 'spree/address/form', locals: { form: bill_form, address_type: 'billing', address: @order.bill_address } %>
    <% end %>
  </fieldset>
</div>

<div class="columns omega six" data-hook="shipping_fieldset_wrapper">
  
    <fieldset id="shipping" <% if @order.shipments.first.selected_shipping_rate.name == "Click & Collect" then %> style="display: none;" <% end %> data-hook>
      <%= form.fields_for :ship_address do |ship_form| %>
        <legend align="center"><%= t('spree.shipping_address') %></legend>
        <% if @order.shipments.first.selected_shipping_rate.name != "Click & Collect" %>
          <div class="checkbox" data-hook="use_billing">
            <%= check_box_tag 'order[use_billing]', '1', @order.shipping_eq_billing_address? %>
            <%= label_tag :order_use_billing, t('spree.use_billing_address'), id: 'use_billing' %>
          </div>
          <%= render partial: 'spree/address/form', locals: { form: ship_form, address_type: 'shipping', address: @order.ship_address } %>
        <% else %>
          <div class="checkbox" data-hook="use_billing">
            <%= check_box_tag 'order[use_billing]', '1', false %>
            <%= label_tag :order_use_billing, t('spree.use_billing_address'), id: 'use_billing' %>
          </div>
          <input type="hidden" value="Maison des Ã‰tudiants" name="order[ship_address_attributes][name]" id="order_ship_address_attributes_name">
          <input type="hidden" value="CultureCampus" name="order[ship_address_attributes][company]" id="order_ship_address_attributes_company">
          <input type="hidden" value="19 Esplanade des Antilles" name="order[ship_address_attributes][address1]" id="order_ship_address_attributes_address1">
          <input type="hidden" value="" name="order[ship_address_attributes][address2]" id="order_ship_address_attributes_address2">
          <input type="hidden" value="Pessac" name="order[ship_address_attributes][city]" id="order_ship_address_attributes_city">
          <input type="hidden" value="<%= Spree::Country.find_by(name: "France").id %>" name="order[ship_address_attributes][country_id]" id="order_ship_address_attributes_country_id">
          <input type="hidden" value="<%= Spree::State.find_by(name: "Nouvelle-Aquitaine").id %>" name="order[ship_address_attributes][state_id]" id="order_ship_address_attributes_state_id">
          <input type="hidden" value="Nouvelle-Aquitaine" name="order[ship_address_attributes][state_name]" id="order_ship_address_attributes_state_name">
          <input type="hidden" value="33600" name="order[ship_address_attributes][zipcode]" id="order_ship_address_attributes_zipcode">
          <input type="hidden" value="06 00 00 00 00" name="order[ship_address_attributes][phone]" id="order_ship_address_attributes_phone">
          <input type="hidden" value="" name="order[ship_address_attributes][alternative_phone]" id="order_ship_address_attributes_alternative_phone">
        <% end %>
      <% end %>
    </fieldset>

</div>
<hr class="clear" />

<div class="form-buttons" data-hook="buttons">
  <%= submit_tag t('spree.save_and_continue'), class: 'continue button primary' %>
  <% if try_spree_current_user %>
    <span data-hook="save_user_address">
      &nbsp; &nbsp;
      <%= check_box_tag 'save_user_address', '1', try_spree_current_user.respond_to?(:persist_order_address) %>
      <%= label_tag :save_user_address, t('spree.save_my_address') %>
    </span>
  <% end %>
</div>
